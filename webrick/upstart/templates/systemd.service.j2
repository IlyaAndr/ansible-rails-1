[Unit]
Description=Webrick Application Server

[Service]
User={{ webrick_user }}
WorkingDirectory={{ webrick_directory }}
ExecStart=/bin/sh -lc '{{ webrick_ruby_prefix }} bundle exec rails s --port={{ webrick_port }} --binding={{ webrick_binding }} --environment ${RAILS_ENV:=production} --pid={{ webrick_pidfile }} >{{ webrick_logfile }} 2>{{ webrick_error_logfile }}'

[Install]
WantedBy=default.target
